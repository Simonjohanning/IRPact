		<!-- microagent <componenttype name="ProsumerAgent" filename="consumerAgents/ProsumerAgent.class" />
		<componenttype name="ProsumerAgent" filename="innovationsdiffusion/consumerAgents/ProsumerAgent.class" />
		 <componenttype name="ProsumerAgent" filename="target/classes/irpact/consumerAgents/ProsumerAgent.class" />
