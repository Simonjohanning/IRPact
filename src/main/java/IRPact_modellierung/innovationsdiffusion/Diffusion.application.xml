		<componenttype name="Mainstream" filename="de/masimba/innovationsdiffusion/agenten/Mainstream.class" />
		<componenttype name="Postmaterialist" filename="de/masimba/innovationsdiffusion/agenten/Postmaterialist.class" />
		<componenttype name="SocialLeader" filename="de/masimba/innovationsdiffusion/agenten/SocialLeader.class" />
		<componenttype name="Traditionalist" filename="de/masimba/innovationsdiffusion/agenten/Traditionalist.class" /> -->
		<componenttype name="Hedonist" filename="irpact/consumerAgents/subSinusMilieuConsumer/Hedonist.class" />
		<componenttype name="Mainstream" filename="irpact/consumerAgents/subSinusMilieuConsumer/Mainstream.class" />
		<componenttype name="Postmaterialist" filename="irpact/consumerAgents/subSinusMilieuConsumer/Postmaterialist.class" />
		<componenttype name="SocialLeader" filename="irpact/consumerAgents/subSinusMilieuConsumer/SocialLeader.class" />
		<componenttype name="Traditionalist" filename="irpact/consumerAgents/subSinusMilieuConsumer/Traditionalist.class" />
	</componenttypes>

	<configurations>
		<configuration name="default">
			<extensions>
				<!-- specified gc2dspace in env space type -->
				<env:envspace name="mygc2dspace" type="gc2dspace" width="25" height="25">
					<env:observers>
						<env:observer name="world" dataview="view_all" perspective="main" />
					</env:observers>
				</env:envspace>
			</extensions>
		</configuration>
		
	</configurations>
</applicationtype>