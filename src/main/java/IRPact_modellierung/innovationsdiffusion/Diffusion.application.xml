<applicationtype xmlns="http://www.activecomponents.org/jadex-application" xmlns:env="http://www.activecomponents.org/jadex-envspace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.activecomponents.org/jadex-application 
	                    http://www.activecomponents.org/jadex-application-${jadex_build_version}.xsd
	                    http://www.activecomponents.org/jadex-envspace 
	                    http://www.activecomponents.org/jadex-envspace-${jadex_build_version}.xsd"
	name="Diffusion" package="irpact.innovationsdiffusion">

	<imports>
		<import>jadex.extension.envsupport.environment.space2d.action.*</import>
		<import>jadex.extension.envsupport.environment.space2d.*</import>
		<import>jadex.extension.envsupport.environment.*</import>
		<import>jadex.extension.envsupport.math.*</import>
		<import>jadex.extension.envsupport.dataview.*</import>
		<import>jadex.extension.envsupport.observer.perspective.*</import>
		<import>jadex.bdi.planlib.*</import>
		<import>jadex.extension.envsupport.evaluation.*</import>
		<import>jadex.commons.*</import>
		<import>jadex.commons.future.*</import>
		<import>jadex.extension.envsupport.observer.gui.plugin.*</import>
		<import>java.awt.*</import>
	</imports>

	<extensiontypes>
		<!-- define space type -->
		<env:envspacetype name="gc2dspace" width="20" height="20" class="ContinuousSpace2D"> <!-- see https://www.activecomponents.org/bin/view/Env+User+Guide/03+Domain+Model for env:envspacetype -->
			<env:objecttypes> <!-- part of domain -->
				<env:objecttype name="ProsumerAvatar">
					<env:property name="gekauft">false</env:property>
				</env:objecttype>
				<env:objecttype name="HedonistAvatar">
					<env:property name="gekauft">false</env:property>
				</env:objecttype>
				<env:objecttype name="MainstreamAvatar">
					<env:property name="gekauft">false</env:property>
				</env:objecttype>
				<env:objecttype name="PostmaterialistAvatar">
					<env:property name="gekauft">false</env:property>
				</env:objecttype>
				<env:objecttype name="SocialLeaderAvatar">
					<env:property name="gekauft">false</env:property>
				</env:objecttype>
				<env:objecttype name="TraditionalistAvatar">
					<env:property name="gekauft">false</env:property>
				</env:objecttype>
			</env:objecttypes>

			<env:dataviews> <!-- part of domain -->
				<env:dataview name="view_all" class="GeneralDataView2D" /> <!-- general: all objects contained in space -->
			</env:dataviews>

			<env:avatarmappings> <!-- part of interaction -->
				<env:avatarmapping componenttype="ProsumerAgent" objecttype="ProsumerAvatar" /> <!-- mapping of agent and avatar -->
				<env:avatarmapping componenttype="Hedonist" objecttype="HedonistAvatar" /> <!-- mapping of agent and avatar -->
				<env:avatarmapping componenttype="Mainstream" objecttype="MainstreamAvatar" /> <!-- mapping of agent and avatar -->
				<env:avatarmapping componenttype="Postmaterialist" objecttype="PostmaterialistAvatar" /> <!-- mapping of agent and avatar -->
				<env:avatarmapping componenttype="SocialLeader" objecttype="SocialLeaderAvatar" /> <!-- mapping of agent and avatar -->
				<env:avatarmapping componenttype="Traditionalist" objecttype="TraditionalistAvatar" /> <!-- mapping of agent and avatar -->
			</env:avatarmappings>

			<env:perspectives> <!-- part of observer -->
				<env:perspective name="abstract" class="Perspective2D" objectplacement="center">
					<env:drawable objecttype="ProsumerAvatar" width="1.0" height="1.0"> <!-- visual counter part of space object type -->
						<env:property name="color" dynamic="true">new Color($object.gekauft ? 0 : 255, $object.gekauft ? 255 : 0, $object.gekauft ? 0 : 0)</env:property>
						<env:rectangle color="color" width="0.8" height="0.8" />
					</env:drawable>
					<env:drawable objecttype="HedonistAvatar" width="1.0" height="1.0"> <!-- visual counter part of space object type -->
						<env:property name="color" dynamic="true">new Color($object.gekauft ? 0 : 255, $object.gekauft ? 255 : 0, 0)</env:property>
						<env:rectangle color="color" width="0.8" height="0.8" />
					</env:drawable>
					<env:drawable objecttype="MainstreamAvatar" width="1.0" height="1.0"> <!-- visual counter part of space object type -->
						<env:property name="color" dynamic="true">new Color($object.gekauft ? 0 : 255, $object.gekauft ? 255 : 0, 0)</env:property>
						<env:rectangle color="color" width="0.8" height="0.8" />
					</env:drawable>
					<env:drawable objecttype="PostmaterialistAvatar" width="1.0" height="1.0"> <!-- visual counter part of space object type -->
						<env:property name="color" dynamic="true">new Color($object.gekauft ? 0 : 255, $object.gekauft ? 255 : 0, 0)</env:property>
						<env:rectangle color="color" width="0.8" height="0.8" />
					</env:drawable>
					<env:drawable objecttype="SocialLeaderAvatar" width="1.0" height="1.0"> <!-- visual counter part of space object type -->
						<env:property name="color" dynamic="true">new Color($object.gekauft ? 0 : 255, $object.gekauft ? 255 : 0, 0)</env:property>
						<env:rectangle color="color" width="0.8" height="0.8" />
					</env:drawable>
					<env:drawable objecttype="TraditionalistAvatar" width="1.0" height="1.0"> <!-- visual counter part of space object type -->
						<env:property name="color" dynamic="true">new Color($object.gekauft ? 0 : 255, $object.gekauft ? 255 : 0, 0)</env:property>
						<env:rectangle color="color" width="0.8" height="0.8" />
					</env:drawable>
					<env:prelayers> <!-- display graphical background element; painted before drawables & postlayers -->
						<env:colorlayer color="black" />
					</env:prelayers>
				</env:perspective>
			</env:perspectives>

			<env:spaceexecutor class="RoundBasedExecutor">
				<env:property name="space">$space</env:property>
			</env:spaceexecutor>
		</env:envspacetype>
	</extensiontypes>

